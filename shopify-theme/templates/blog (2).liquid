{%- comment -%}
Legacy blog template wrapper.
Note: No dedicated blog sections were built; this renders a simple list.
{%- endcomment -%}

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <h1 class="text-3xl font-bold mb-6">{{ blog.title }}</h1>
  {%- if blog.articles_count == 0 -%}
    <p>No articles found.</p>
  {%- else -%}
    <div class="space-y-8">
      {%- for article in blog.articles -%}
        <article class="border-b border-gray-200 pb-6">
          <h2 class="text-2xl font-semibold text-black mb-2">
            <a href="{{ article.url }}" class="hover:underline">{{ article.title }}</a>
          </h2>
          <p class="text-sm text-gray-500 mb-3">{{ article.published_at | date: "%b %d, %Y" }}</p>
          <div class="prose max-w-none text-gray-700">
            {{ article.excerpt_or_content | strip_html | truncate: 240 }}
          </div>
        </article>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>
