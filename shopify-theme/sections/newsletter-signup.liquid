{% comment %}
  Newsletter Signup Section
  Email signup form matching BrowseClient.tsx footer
{% endcomment %}

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Sign up to unlock customized recommendations at wholesale prices"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Sign up"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Business email address"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup"
    }
  ]
}
{% endschema %}

<div class="bg-gray-50 border-t border-gray-200 mt-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <h2 class="text-2xl font-semibold text-black flex-1">
        {{ section.settings.title }}
      </h2>
      <div class="flex items-center gap-3 w-full md:w-auto">
        {% form 'customer', class: 'flex items-center gap-3 w-full md:w-auto' %}
          <input
            type="email"
            name="contact[email]"
            placeholder="{{ section.settings.placeholder }}"
            class="flex-1 md:w-80 px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-1 focus:ring-black"
            required
          >
          <input type="hidden" name="contact[tags]" value="newsletter">
          <button
            type="submit"
            class="bg-black text-white px-8 py-3 rounded-lg font-medium hover:bg-gray-800 transition-colors"
          >
            {{ section.settings.button_text }}
          </button>
        {% endform %}
      </div>
    </div>
  </div>
</div>
